{
  "name": "micri",
  "version": "1.0.1",
  "description": "Asynchronous HTTP microservices",
  "main": "./lib/index.js",
  "files": [
    "bin",
    "lib"
  ],
  "scripts": {
    "build": "rm -rf ./lib && tsc",
    "test": "npm run lint && NODE_ENV=test jest",
    "lint": "eslint --ext .ts ./src",
    "git-pre-commit": "eslint --ext .ts ./src",
    "prepublish": "npm run build",
    "prettier": "prettier --write './{src,test}/**/*.ts'"
  },
  "bin": {
    "micri": "./bin/micri.js"
  },
  "engines": {
    "node": ">= 8.0.0"
  },
  "repository": "OlliV/micri",
  "keywords": [
    "micro",
    "micri",
    "service",
    "microservice",
    "API"
  ],
  "license": "MIT",
  "devDependencies": {
    "@types/bytes": "3.0.0",
    "@types/content-type": "1.1.3",
    "@types/jest": "24.0.18",
    "@types/node": "12.7.11",
    "@types/test-listen": "1.1.0",
    "@typescript-eslint/eslint-plugin": "2.3.2",
    "@typescript-eslint/parser": "2.3.2",
    "@zeit/fetch-retry": "4.0.1",
    "@zeit/git-hooks": "0.1.4",
    "eslint": "6.5.1",
    "eslint-config-prettier": "6.3.0",
    "eslint-plugin-prettier": "3.1.1",
    "jest": "24.9.0",
    "node-fetch": "2.6.0",
    "prettier": "1.18.2",
    "request": "2.83.0",
    "request-promise": "4.2.2",
    "resumer": "0.0.0",
    "test-listen": "1.0.2",
    "ts-jest": "24.1.0",
    "typescript": "3.6.3"
  },
  "dependencies": {
    "arg": "4.1.1",
    "bytes": "3.1.0",
    "content-type": "1.0.4",
    "raw-body": "2.3.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testMatch": [
      "**/test/**/*.test.ts"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/*.ts"
    ],
    "verbose": true
  },
  "git": {
    "pre-commit": "lint-staged"
  }
}
