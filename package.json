{
  "name": "micro",
  "version": "7.1.0",
  "description": "Asynchronous HTTP microservices",
  "main": "./lib/server.js",
  "files": [
    "bin",
    "lib"
  ],
  "scripts": {
    "precommit": "npm run lint",
    "lint": "xo",
    "test": "npm run lint && NODE_ENV=test ava"
  },
  "xo": {
    "esnext": true,
    "space": true,
    "semicolon": false,
    "ignores": [
      "examples/**/*"
    ],
    "rules": {
      "unicorn/no-process-exit": 0
    }
  },
  "bin": {
    "micro": "./bin/micro.js"
  },
  "repository": "zeit/micro",
  "keywords": [
    "micro",
    "service",
    "microservice",
    "serverless",
    "API"
  ],
  "author": {
    "name": "Zeit, Inc.",
    "email": "team@zeit.co"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/zeit/micro/issues"
  },
  "homepage": "https://github.com/zeit/micro#readme",
  "devDependencies": {
    "ava": "0.18.2",
    "husky": "0.13.2",
    "request": "2.80.0",
    "request-promise": "4.1.1",
    "resumer": "0.0.0",
    "test-listen": "1.0.1",
    "then-sleep": "1.0.1",
    "xo": "0.17.1"
  },
  "dependencies": {
    "args": "2.3.0",
    "async-to-gen": "1.3.2",
    "bluebird": "3.5.0",
    "boxen": "1.0.0",
    "chalk": "1.1.3",
    "copy-paste": "1.3.0",
    "detect-port": "1.1.0",
    "ip": "1.1.5",
    "is-async-supported": "1.2.0",
    "isstream": "0.1.2",
    "media-typer": "0.3.0",
    "node-version": "1.0.0",
    "raw-body": "2.2.0",
    "update-notifier": "2.1.0"
  }
}
