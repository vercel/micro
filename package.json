{
  "name": "micri",
  "version": "0.1.3",
  "description": "Asynchronous HTTP microservices",
  "main": "./lib/index.js",
  "files": [
    "bin",
    "lib"
  ],
  "scripts": {
    "test": "npm run lint && NODE_ENV=test jest",
    "lint": "zeit-eslint --ext .jsx,.js ./lib",
    "lint-staged": "git diff --diff-filter=ACMRT --cached --name-only '*.js' '*.jsx' | xargs zeit-eslint"
  },
  "bin": {
    "micri": "./bin/micri.js"
  },
  "engines": {
    "node": ">= 8.0.0"
  },
  "repository": "OlliV/micri",
  "keywords": [
    "micro",
    "micri",
    "service",
    "microservice",
    "API"
  ],
  "license": "MIT",
  "devDependencies": {
    "@zeit/eslint-config-node": "0.2.13",
    "@zeit/fetch-retry": "4.0.1",
    "@zeit/git-hooks": "0.1.4",
    "eslint": "4.19.1",
    "husky": "0.14.3",
    "jest": "24.9.0",
    "node-fetch": "2.6.0",
    "request": "2.83.0",
    "request-promise": "4.2.2",
    "resumer": "0.0.0",
    "test-listen": "1.0.2",
    "then-sleep": "1.0.1"
  },
  "dependencies": {
    "arg": "4.1.1",
    "content-type": "1.0.4",
    "raw-body": "2.3.2"
  },
  "jest": {
    "testMatch": [
      "**/test/**/*.test.[jt]s?(x)"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "lib/*.{js,jsx}"
    ],
    "verbose": true
  },
  "eslintConfig": {
    "extends": [
      "@zeit/eslint-config-node"
    ]
  },
  "git": {
    "pre-commit": "lint-staged"
  }
}
